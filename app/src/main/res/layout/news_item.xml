<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#F2F2F2"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        android:layout_margin="1dp"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:visibility="visible"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:id="@+id/header_row"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:src="@drawable/user_profile"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"


            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <RelativeLayout
            android:layout_toRightOf="@+id/user_profile_image"
            android:id="@+id/name_post_status"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name"
                android:text="Nagendra"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/user_name"
                android:id="@+id/time_ago"
                android:text="30 mins ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>


    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/header_row"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:layout_marginEnd="10dp"
        android:textColor="#33b5e5"
        android:id="@+id/tag"
        android:text="#Tag"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tag"
        android:layout_alignParentLeft="true"
        android:id="@+id/banner_image"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/action_section"
        android:layout_below="@+id/banner_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:id="@+id/whatsapp_sharing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/whatsapp_photo" />

        <ImageView
            android:layout_marginLeft="50dp"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:id="@+id/like_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/like_icon_lnch"
            />


        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:id="@+id/comment_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/comment_icon"
            />

        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:id="@+id/download_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/download_icon"
            />

    </LinearLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
