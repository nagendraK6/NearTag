<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/colorWhite"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/image_edit_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_alignParentLeft="true"
            android:id="@+id/cancel_tick_mark"
            android:src="@drawable/cancel_icon_black"
            android:background="@drawable/circular_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
           android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
           android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
           android:layout_height="wrap_content"
           android:text="फोटो सजाएँ"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/ok_tick_mark"
            android:src="@drawable/check_mark_icon_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorLightGreen"
            android:background="@drawable/circular_border"
            />
    </RelativeLayout>

         android:layout_height="wrap_content">

    <com.xiaopo.flying.sticker.StickerView
        android:layout_below="@+id/image_edit_control"

        android:id="@+id/sticker_view"
        app:showBorder="true"
        app:showIcons="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    <ImageView
             android:layout_alignParentLeft="true"
             android:id="@+id/user_photo"
             android:adjustViewBounds="true"
             android:scaleType="fitXY"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >


         </ImageView>
    </com.xiaopo.flying.sticker.StickerView>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/lower_image_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/text_add_option"
                android:src="@drawable/type_add_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text_add_option"
                android:text="Text"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="फोटो सजाएँ"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/color_filter_option"
            android:src="@mipmap/color_pallet"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorLightGreen"
            />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>